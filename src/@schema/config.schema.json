{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AWSCredentials": {
      "properties": {
        "user_key": {
          "type": "string"
        },
        "user_secret": {
          "type": "string"
        }
      },
      "required": [
        "user_key",
        "user_secret"
      ],
      "type": "object"
    },
    "AWSHosting": {
      "properties": {
        "cloudfront_distribution_id": {
          "type": "string"
        },
        "s3_bucket": {
          "type": "string"
        }
      },
      "required": [
        "s3_bucket",
        "cloudfront_distribution_id"
      ],
      "type": "object"
    },
    "Config.Auth": {
      "properties": {
        "password": {
          "description": "A password for client authentication",
          "type": "string"
        },
        "username": {
          "description": "A username for the client authentication",
          "type": "string"
        }
      },
      "required": [
        "username",
        "password"
      ],
      "type": "object"
    },
    "Config.MergedConfig": {
      "properties": {
        "auth": {
          "$ref": "#/definitions/Config.Auth"
        },
        "client": {
          "type": "string"
        },
        "dist_folder": {
          "type": "string"
        },
        "profile": {
          "$ref": "#/definitions/Config.Profile"
        },
        "project": {
          "type": "string"
        }
      },
      "required": [
        "client",
        "dist_folder",
        "profile",
        "project"
      ],
      "type": "object"
    },
    "Config.Profile": {
      "properties": {
        "credentials": {
          "$ref": "#/definitions/AWSCredentials",
          "description": "The identification of a AWS user. Leave it empty to use the current credentials configured via the AWS CLI."
        },
        "hosting": {
          "$ref": "#/definitions/AWSHosting",
          "description": "The AWS resources used to serve this demo."
        },
        "name": {
          "description": "And identifier for the profile when using the global config.",
          "type": "string"
        }
      },
      "required": [
        "name",
        "hosting"
      ],
      "type": "object"
    },
    "GlobalConfig": {
      "description": "Global configurations that should be defined on `~/.necrorc.yaml`.",
      "properties": {
        "default_profile": {
          "type": "string"
        },
        "profiles": {
          "items": {
            "$ref": "#/definitions/Config.Profile"
          },
          "type": "array"
        }
      },
      "type": "object"
    },
    "ProjectConfig": {
      "properties": {
        "auth": {
          "$ref": "#/definitions/Config.Auth"
        },
        "client": {
          "type": "string"
        },
        "dist_folder": {
          "type": "string"
        },
        "profile": {
          "$ref": "#/definitions/Config.Profile"
        },
        "project": {
          "type": "string"
        }
      },
      "required": [
        "client",
        "project",
        "dist_folder"
      ],
      "type": "object"
    }
  }
}